<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donasi"
            android:textSize="30sp"
            android:gravity="center"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masjid Darul Jannah"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment For:"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
    <CheckBox
            android:id="@+id/infaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infaq"
            android:layout_marginTop="5dp"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:id="@+id/zakat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zakat"
            android:onClick="onCheckboxClicked"/>
    <CheckBox
            android:id="@+id/wakaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wakaf"
            android:onClick="onCheckboxClicked"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nominal"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:id="@+id/nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sebagai Hamba Allah"
            android:textSize="10sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Bank"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
    <CheckBox
            android:id="@+id/bsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Syariah Mandiri (BSM)"/>
    <CheckBox
            android:id="@+id/mandiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Mandiri"/>
    <CheckBox
            android:id="@+id/bri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Rakyat Indonesia (BRI)"/>
    <Button
            android:id="@+id/donasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donasi"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"/>

</LinearLayout>